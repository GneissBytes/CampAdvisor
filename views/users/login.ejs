<% layout('./layouts/boilerplate') %>
    <div class="container  justify-content-center align-items-center mt-5">
        <!-- d-flex breaks shit -->
        <div class="row">
            <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
                <div class="card shadow">
                    <img src="https://images.unsplash.com/photo-1506535995048-638aa1b62b77?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1050&q=80" alt="Login" class="card-img-top">
                    <div class="card-body">
                        <h5 class="card-title">Login</h5>
                        <form action="/login " method="POST" novalidate class="validated-form">
                            <div class=" mb-3 ">
                                <label for="username " class=" form-label ">Username</label>
                                <input type="text" name="username" class="form-control" id="username" autofocus required>
                                <div class=" valid-feedback ">Username ok</div>
                                <div class=" invalid-feedback ">Username required!</div>
                            </div>
                            <div class=" mb-3 ">
                                <label for="password" class=" form-label ">Password</label>
                                <input id="password" type="password" name="password" class="form-control" required>
                                <div class=" valid-feedback ">Password ok</div>
                                <div class=" invalid-feedback ">Password required!</div>
                            </div>
                            <button type=" submit " class=" btn btn-info btn-block">Login!</button>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>


















    <script src=" /js/formValidation.js "></script>