<% layout('./layouts/boilerplate') %>
<div class="row mb-3">
    <h1 class="text-center mb-5">Edit Campground <%= campground.title %> </h1>
    <div class="col-6 offset-3">
        <form id="campedit" action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" class="validated-form"
            novalidate>
            <div class="valid-feedback">Great new name!</div>
            <div class="invalid-feedback">Name required!</div>
            <div class="form-group">
                <label for="campground[title]" class="form-label">Title</label>
                <input type="text" name="campground[title]" class="form-control" value="<%= campground.title %>"
                    required>
                <div class="valid-feedback">Great new name!</div>
                <div class="invalid-feedback">Please enter name!</div>

            </div>
            <div class="form-group">
                <label for="campground[location]" class="form-label">Location</label>
                <input type="text" name="campground[location]" class="form-control" value="<%= campground.location %>"
                    required>
                <div class="valid-feedback">Interesting new location!</div>
                <div class="invalid-feedback">Please input location!</div>
            </div>
            <div>
                <label for="campground[price]" class="form-label" style="display:block">Price</label>

            </div>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">$</span>
                </div>
                <input type="number" min="0" step="0.01" name="campground[price]" class="form-control"
                    value="<%= campground.price  %>" required>
                <div class="valid-feedback">New price checks out!</div>
                <div class="invalid-feedback">Please enter correct price!</div>
            </div>


            <div class="form-group">
                <div class="rounded img-thumbnail" style="width: 100%;max-height: 40%;">
                    <img id="campImg" src="<%= campground.image %>" style="width:100%">
                </div>
                <label for="campground[image]" class="form-label">Image</label>
                <input id="imglink" type="text" name="campground[image]" class="form-control"
                    value="<%= campground.image %>" required>
                <div class="valid-feedback">New image loaded!</div>
                <div class="invalid-feedback">Enter image!</div>
            </div>
            <div class="form-group">
                <label for="campground[description]">Description</label>
                <textarea class="form-control" name="campground[description]" rows="5"
                    style="resize: none;"><%=campground.description %></textarea>
                <div class="valid-feedback">Fine new description!</div>
                <div class="invalid-feedback">Please enter camp description!</div>
            </div>
            <button type="submit" class="btn btn-info">Submit changes</button>
        </form>
        <div class="container mt-5">
            <a href="/campgrounds/<%= campground._id %> " class="btn btn-secondary">Go back</a>
            <form action="/campgrounds/<%= campground._id %>?_method=DELETE" style="display: inline" method="POST"
                onsubmit="return confirm('Are you sure you want to delete campground <%= campground.title %>?')">
                <button class="btn btn-danger">Delete this campground</button>
            </form>
        </div>
    </div>
</div>
<script>
    const imgLink = document.querySelector('#imglink');
    const campImg = document.querySelector("#campImg");
    imgLink.addEventListener("change", () => {
        campImg.src = imgLink.value;
    })
</script>


<script src="/js/formValidation.js"></script>