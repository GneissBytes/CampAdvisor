<% layout('./layouts/boilerplate') %>


<div class="row">
    <div class="col-6 mb-5">
        <div class="card mb-3">
            <img class="card-img-top" src="<%= campground.image %> " alt="<%= campground.title %> ">
            <div class="card-body">
                <h5 class="card-title"><%= campground.title %> </h5>
                <p class="card-text"><%= campground.description %> </p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item text-muted"><%= campground.location %> </li>
                <li class="list-group-item text-muted">Price: $<%= campground.price %> </li>

            </ul>
            <div class="card-body">
                <% if (currentUser && (campground.author._id.equals(currentUser._id))) { %>
                <a href="/campgrounds/<%= campground._id %>/edit" class="btn btn-warning">Edit</a>
                <form action="/campgrounds/<%= campground._id %>?_method=DELETE" style="display: inline" method="POST"
                    onsubmit="return confirm('Are you sure you want to delete campground <%= campground.title %>?')">
                    <button class="btn btn-danger">Delete</button>
                </form>
                <% } %>
                <a href="/campgrounds" class="ml-auto btn btn-secondary" style="align-self:flex-end">Go back</a>
            </div>
            <div class="card-footer text-muted">
                Submited <%= Math.floor(Math.random()*365)+1 %> days ago by <%= campground.author.username %>
            </div>
        </div>


    </div>
    <div class="col-6 mb-5">
        <% if (campground.reviews.length == 0) { %>
        <h2 class="mb-3">There are no reviews yet!</h2>
        <% } else { %>
        <h2 class="mt-3">Reviews</h2>
        <% } %>
        <form action="/campgrounds/<%= campground._id %>/reviews" method="POST" class="mt-3 mb-3 validated-form"
            novalidate>
            <div class="mb-3">
                <label class="col-form-label" for="rating">Rating</label>
                <input class="custom-range" type="range" name="review[rating]" min="1" max="5" id="rating">
            </div>
            <div class="mb-3">
                <label for="body" class="col-form-label">Review:</label>
                <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3" required></textarea>
                <div class="invalid-feedback">Review body can't be empty!</div>
            </div>
            <button type="submit" class="btn btn-success">Add review</button>
        </form>
        <div class="mb-3">
            <% for( let review of campground.reviews ) { %>
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="mb-0 card-title"><strong><%= '*'.repeat(review.rating) %> </strong></h5>
                    <p class="mb-0 card-text"><strong><%= review.body %> </strong></p>
                    <form class="mt-2"
                        action="/campgrounds/<%= campground._id %>/reviews/<%= review._id %>?_method=DELETE"
                        method=POST>
                        <button type="submit" class="btn btn-danger btn-sm">Remove this review</button>
                    </form>
                </div>
            </div>
            <% } %>
        </div>

    </div>
</div>


<script src="/js/formValidation.js"></script>